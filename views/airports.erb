<h2>Search Airports</h2>

<div class="flightsearch">
  <form class="airportsearch" action="/FlightTrackApp/searchairport" method="post">
    <input id="country" type="text" name="from_country" placeholder="country">

    <input id="city" type="text" name="from_city" placeholder="city">
    <button type="submit">Search</button>
  </form>
</div>

<% if session[:results] %>
  <ul>
    <% session.delete(:results).each do |airport| %>
    <li><form action="/FlightTrackApp/detailsairport/<%= airport[0] %>" method="get">
          <button type="submit"><%= airport[1] %></button>
        </form>
    </li>
    <% end %>
  </ul>
<% end %>

<script>
  $(document).ready(function() {
  $("#country").keyup(function() {

    $.getJSON("/autocomplete?country=" + $(this).val(), function(data) {

      $("#country").autocomplete({
        source: data
      });
    });
  });

  $("#city").keyup(function() {

    $.getJSON("/autocomplete?city=" + $(this).val(), function(data) {

      $("#city").autocomplete({
        source: data
      });
    });
  });
});
</script>
